- name: delete ec2 and r53 records
  hosts: all            # all represents the all hosts 
  connection: local
  vars:                 # creating variables security group id, ami id, environment, instance names and domain name.
   sg_id: sg-0c93cbb50366ae3cd  # my ec2 instance security group id required here
   ami_id: ami-0220d79f3f480ecf5  # my ec2 instance AMI ID
   env: dev
   action: create
   instances:
    - mongodb
    - catalogue
   domain_name: techno90s.online
  tasks:
  ### Destroy the Ec2 instance and Route53 records if not required after usage ###
  - name: delete route53 records for frontend
    amazon.aws.route53:
     state: absent
     zone: "{{ domain_name }}"
     record: "roboshop-{{ env }}.{{ domain_name }}" # it will delete roboshop-env.techno09s.online
     type: A
     ttl: 1
    loop: "{{ instances }}"
    when: 
    - item == "frontend"
    - action == "destroy"

  - name: delete route53 records for frontend
    amazon.aws.route53:
     state: absent
     zone: "{{ domain_name }}"
     record: "{{ item }}-{{ env }}.{{ domain_name }}" # it will delete roboshop-env.techno09s.online
     type: A
     ttl: 1
    loop: "{{ instances }}"
    when:  action == "destroy"

  - name: delete ec2 instances
    amazon.aws.ec2_instance:
     state: absent
     name: "{{ item }}-{{ env }}"
     wait: false
    loop: "{{ instances }}"
    when: action == "destroy"


     # ansible-playbook -i localhost,   -e '{"instances":["mongodb","catalogue","redis","user","cart","mysql","shipping","rabbitmq","payment","frontend"]}'  -e action=destroy roboshop.yaml

     # ansible-playbook -i localhost,   -e '{"instances":["mongodb","catalogue","redis","user","cart","mysql","shipping","rabbitmq","payment","frontend"]}'  -e action=destroy roboshop-del-ec2-R53records.yaml
